rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /tasks_users/{userId} {
      allow read, write: if true;
    }
    match /tasks/{taskId} {
      allow read, write: if true;
    }
    match /holidays/{docId} {
      allow read, write: if true;
    }
    match /absences/{docId} {
      allow read, write: if true;
    }
    match /removal_requests/{docId} {
      allow read, write: if true;
    }
  }
}
